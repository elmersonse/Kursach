<Page x:Class="Kursach.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Name="l1" FontFamily="Verdana" FontSize="14" DockPanel.Dock="Top" Margin="10 0 10 0" />
        <Button HorizontalAlignment="Left" DockPanel.Dock="Left" Grid.Row="1" Margin="15 5" Width="100" Click="Button_Click" Content="Выход" />
        <Button Name="UsersButton" Visibility="Hidden" Grid.Row="2" Margin="5 30" Content="Настройки пользователей" DockPanel.Dock="Bottom" Height="30" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Grid.Row="3" Margin="5" Content="О программе" DockPanel.Dock="Bottom"/>
    </Grid>
</Page>
